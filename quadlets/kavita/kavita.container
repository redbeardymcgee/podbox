[Unit]
Description=Ebook reader
After=caddy.service

[Service]
Restart=on-failure
TimeoutStartSec=900

[Install]
WantedBy=default.target

[Container]
Image=ghcr.io/kareadita/kavita:latest
ContainerName=kavita
HostName=kavita
AutoUpdate=registry

PublishPort=5000

Volume=kavita-config:/kavita/config
Volume=/volumes/books:/library

Environment=TZ=

