[Unit]
Description=Reverse proxy

[Service]
Restart=on-failure

[Install]
WantedBy=default.target

[Container]
Image=caddy.build
ContainerName=caddy

Network=reverse-proxy.network
HostName=caddy
PublishPort=80:80
PublishPort=443:443
PublishPort=443:443/udp

Volume=caddy-config:/config:z
Volume=caddy-data:/data:z

Volume=./Caddyfile:/etc/caddy/Caddyfile:z

